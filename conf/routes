# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Import Secure
*      /                  module:secure

# Home page
GET     /                                       Application.index
GET     /topic/all                              Application.topics
GET     /topic/                                 Application.topic
POST    /topic/create                           Application.createTopic
POST    /topic/meta/create                      Application.addMeta
GET    /topic/meta/remove                      Application.removeMeta

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*      /admin              module:crud
