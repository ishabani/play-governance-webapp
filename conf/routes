# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Import Secure
*      /                  module:secure

# Home page
GET     /                                       Application.index
GET     /topic/all                              TopicsController.topics
GET     /topic/dsb                              TopicsController.dsb
POST    /topic/dsb/create                       TopicsController.createDSB
GET     /topic/dsb/delete                       TopicsController.deleteDSB
GET     /topic/platform/subscriber              TopicsController.subscriber
POST    /topic/platform/subscriber/create       TopicsController.createSubscriber
GET     /topic/platform/consumer                TopicsController.consumer
GET     /topic/platform/consumer/create         TopicsController.createConsumer

GET    /registry/all                            RegistryController.services
GET    /registry/init                           RegistryController.initData
POST   /registry/loadresources		            RegistryController.loadResources
GET    /registry/loadresources		            RegistryController.loadResources
GET    /registry/load		                  	RegistryController.load
GET    /registry/service                        RegistryController.service
PORT   /registry/service/create                 RegistryController.create
POST   /registry/update                         RegistryController.update

GET     /resource/all                           MetadataController.list
GET     /resource/                              MetadataController.resource
POST    /resource/create                        MetadataController.createResource
POST    /resource/meta/add                  	MetadataController.addMeta
GET     /resource/meta/rm		                MetadataController.removeMeta
POST    /resource/loadresources		            MetadataController.loadResources
GET     /resource/loadresources		            MetadataController.loadResources
GET     /resource/load		                  	MetadataController.load

GET     /subscription/all                       SubscriptionsController.subscriptions
GET     /subscription/create                    SubscriptionsController.create
GET     /subscription/createfrom                SubscriptionsController.createFrom
POST    /subscription/new                    	SubscriptionsController.new
GET     /subscription/clear                     SubscriptionsController.removeAll

GET     /bootsubscription/new                   SubscriptionsController.createBootSubscriptions
GET     /bootsubscription/delete                SubscriptionsController.deleteBoot

GET     /bootstrap/list                         BootstrapController.subscriptions
GET     /bootstrap/launch                       BootstrapController.launchBootSubscriptions
GET     /bootstrap/result                       BootstrapController.subscriptionsResult
GET     /bootstrap/create                       BootstrapController.create
POST    /bootstrap/createNew                    BootstrapController.createNewBoot



# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import CRUD routes
*      /admin              module:crud
